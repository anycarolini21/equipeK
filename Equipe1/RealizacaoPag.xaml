<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Equipe1.RealizacaoPag"
             BackgroundColor="#D6EAF8">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
            <Frame BackgroundColor="White" CornerRadius="10" Padding="20">
                <StackLayout>
                    <Label Text="Realização do Pagamento" 
                           HorizontalOptions="Center"
                           FontAttributes="Bold" />
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="10">
                        <Button Text="Dinheiro" WidthRequest="200" HeightRequest="40"/>
                        <Button Text="Cartão" WidthRequest="200" HeightRequest="40"/>
                        <Button Text="Pix" WidthRequest="200" HeightRequest="40"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Padding="10">
                        <Button Text="←" HorizontalOptions="CenterAndExpand"/>
                        <Button Text="→" HorizontalOptions="CenterAndExpand"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
